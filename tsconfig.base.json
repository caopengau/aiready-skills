{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@aiready/*": ["packages/*/dist", "packages/*/src"]
    },
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node"]
  }
}
