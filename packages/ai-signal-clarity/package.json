{
  "name": "@aiready/ai-signal-clarity",
  "version": "0.1.6",
  "description": "Detects code patterns that cause AI models to hallucinate incorrect implementations",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "aiready-ai-signal-clarity": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build",
    "release": "pnpm build && pnpm publish --no-git-checks"
  },
  "keywords": [
    "aiready",
    "hallucination",
    "ai-safety",
    "code-quality",
    "copilot",
    "claude",
    "chatgpt",
    "ai-assisted-development",
    "magic-literals",
    "boolean-traps",
    "ambiguous-code"
  ],
  "author": "AIReady Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/caopengau/aiready-ai-signal-clarity.git"
  },
  "homepage": "https://github.com/caopengau/aiready-ai-signal-clarity",
  "dependencies": {
    "@aiready/core": "workspace:*",
    "@typescript-eslint/types": "^8.53.0",
    "@typescript-eslint/typescript-estree": "^8.53.0",
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "glob": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
