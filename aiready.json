{
  "$schema": "https://aiready.dev/schema.json",
  "scan": {
    "include": ["packages/core/src/index.ts"],
    "exclude": [
      "**/dist/**",
      "**/node_modules/**",
      "**/__tests__/**",
      "**/*.test.ts",
      "**/*.spec.ts",
      "landing/components/FAQ.tsx"
    ]
  },
  "tools": {
    "consistency": {
      "checkNaming": true,
      "checkPatterns": false,
      "checkArchitecture": true,
      "acceptedAbbreviations": [
        "ast","dep","deps","dfs","bfs","tok","ctx","req","res","err","msg","num","str","obj","arr","fn","arg","args","param","params","attr","attrs","prop","props","cfg","config","env","vars","util","utils","lib","src","dest","tmp","temp","max","min","avg","sum","prod"
      ],
      "shortWords": [
        "is","has","can","should","will","get","set","add","del","put","pop","push","map","key","val","ref","id","uid","uri","url","api","cli","sdk","css","html","dom","xhr","jwt","tag"
      ]
    },
    "pattern-detect": {
      "minSimilarity": 0.5,
      "minLines": 5,
      "approx": false,
      "minSharedTokens": 5,
      "maxCandidatesPerBlock": 200,
      "minClusterTokenCost": 200,
      "minClusterFiles": 2
    },
    "context-analyzer": {
      "maxDepth": 2,
      "maxContextBudget": 15000,
      "minCohesion": 0.9,
      "maxFragmentation": 0.1,
      "includeNodeModules": false
    }
  },
  "output": {
    "format": "console",
    "directory": ".aiready"
  }
  ,
  "visualizer": {
    "groupingDirs": ["landing", "packages"]
  }
}
