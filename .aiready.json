{
  "scan": {
    "include": ["packages/**/*.ts"],
    "exclude": ["packages/**/dist/**", "packages/**/node_modules/**"]
  },
  "tools": {
    "pattern-detect": {
      "severity": "all",
      "minSimilarity": 0.3,
      "maxResults": 1
    },
    "context-analyzer": {
      "maxDepth": 3,
      "maxResults": 1
    }
  }
}
